# NBA Betting Analysis Environment Template
# Copy this to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================
NBA_PG_DSN=postgresql://username:password@localhost:5432/nba_betting
# Example for AWS RDS:
# NBA_PG_DSN=postgresql://nbauser:password@nba-pg-prod.region.rds.amazonaws.com:5432/nba_pg_prod

# ============================================================================
# DATA COLLECTION MODE
# ============================================================================
USE_PLACEHOLDER_DATA=true
PLACEHOLDER_GAMES_PER_DAY=8

# When ready for real data, change to:
# USE_PLACEHOLDER_DATA=false

# ============================================================================
# NBA API CONFIGURATION
# ============================================================================
NBA_API_DELAY=2.5
NBA_API_TIMEOUT=30.0
NBA_API_RETRY_COUNT=4

# NBA API requires more careful rate limiting than MLB
# Some endpoints may need custom headers:
# NBA_API_USER_AGENT=Mozilla/5.0 (compatible NBA client)

# ============================================================================
# DIRECTORY PATHS
# ============================================================================
OUTPUT_DIR=stage
LOG_DIR=logs
MIGRATIONS_DIR=migrations

# ============================================================================
# NBA-SPECIFIC FEATURES  
# ============================================================================
ENABLE_PLAYER_TRACKING=true
ENABLE_SHOT_CHART=true
ENABLE_ADVANCED_BOXSCORES=true
ENABLE_LINEUP_ANALYSIS=true

# ============================================================================
# NBA BETTING THRESHOLDS
# ============================================================================
HIGH_SCORING_THRESHOLD=230
LOW_SCORING_THRESHOLD=195
BLOWOUT_THRESHOLD=20

# Player prop thresholds
POINTS_PROP_THRESHOLD=15.5
REBOUNDS_PROP_THRESHOLD=8.5
ASSISTS_PROP_THRESHOLD=5.5

# ============================================================================
# DATA QUALITY SETTINGS
# ============================================================================
MIN_TRACKING_COVERAGE=0.8
MIN_GAMES_FOR_TRENDS=5
MIN_SAMPLE_SIZE_PLAYER=10

# ============================================================================
# LOGGING AND DEBUG
# ============================================================================
DEBUG=false
VERBOSE=false
LOG_LEVEL=INFO
LOG_TO_FILE=true

# ============================================================================
# SEASON SETTINGS
# ============================================================================
CURRENT_NBA_SEASON=2024
SEASON_START_MONTH=10
SEASON_END_MONTH=6

# Handle different parts of NBA season
REGULAR_SEASON_START=2024-10-15
PLAYOFFS_START=2025-04-15
FINALS_START=2025-06-01

# ============================================================================
# USAGE INSTRUCTIONS
# ============================================================================
#
# üèÄ PLACEHOLDER MODE (Recommended for testing):
#    USE_PLACEHOLDER_DATA=true
#    - Fast, reliable data generation
#    - Works for any date (including future)
#    - Perfect for testing the NBA pipeline
#    - No API rate limits or failures
#
# üì° REAL DATA MODE (For production):
#    USE_PLACEHOLDER_DATA=false
#    - Uses real NBA API
#    - Requires careful rate limiting
#    - Only works for dates with real games
#    - May hit API limits
#
# üéØ QUICK START:
#    1. Copy this file to .env
#    2. Set your database connection (NBA_PG_DSN)
#    3. Keep USE_PLACEHOLDER_DATA=true for testing
#    4. Run: python py/nba_enhanced_backfill.py --start 2024-01-15 --end 2024-01-15
#    5. Test with real data later: USE_PLACEHOLDER_DATA=false
#
# üîÑ NBA SEASON TIMING:
#    - Regular Season: October - April
#    - Playoffs: April - June  
#    - Off-season: July - September (no games)
#    - Preseason: September - October
#
# ============================================================================